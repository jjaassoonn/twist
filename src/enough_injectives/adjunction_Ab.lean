instance : module R ((‚ü®R‚ü© : Ab) ‚ü∂ A) :=
{ smul := Œª r f, 
  { to_fun := Œª r', f (r' * r),
    map_zero' := by rw [zero_mul, map_zero],
    map_add' := Œª a b, by rw [add_mul, map_add] },
  one_smul := Œª f, begin
    ext1 r,
    change f _ = _,
    rw [mul_one],
  end,
  mul_smul := Œª r1 r2 f, begin
    ext1 r,
    change f _ = f _,
    rw mul_assoc,
  end,
  smul_add := Œª r f g, begin
    ext1 x,
    change (f + g) _ = f _ + g _,
